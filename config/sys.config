%% Thanks to Ulf Wiger at Ericcson for these comments:
%%
%% This file is identified via the erl command line option -config File.
%% Note that File should have no extension, e.g.
%% erl -config .../sys (if this file is called sys.config)
%%
%% In this file, you can redefine application environment variables.
%% This way, you don't have to modify the .app files of e.g. OTP applications.

[
  %% SASL config
  {sasl, [
    {sasl_error_logger, {file, "/Users/xuchaoqian/codebase/bitbros/maxwell-server/log/sasl-error.log"}},
    {errlog_type, error},
    {error_logger_mf_dir, "/Users/xuchaoqian/codebase/bitbros/maxwell-server/log/sasl"},      % Log directory
    {error_logger_mf_maxbytes, 10485760},   % 10 MB max file size
    {error_logger_mf_maxfiles, 5}           % 5 files max
  ]},

  %% Lager config
  {lager, [
    {colored, true},
    {handlers, [
      {lager_console_backend, [
        {level, debug},
        {formatter, lager_default_formatter},
        {formatter_config, ["[", severity, "] ", date, " ", time, " ", pid, " [", module, ":", line, "] ", message, "\n"]}
      ]},

      {lager_file_backend, [
        {file, "/Users/xuchaoqian/codebase/bitbros/maxwell-server/log/info.log"},
        {size, 10485760},
        {date, "$D0"},
        {count, 40},
        {level, debug},
        {formatter, lager_default_formatter},
        {formatter_config, ["[", severity, "] ", date, " ", time, " ", pid, " [", module, ":", line, "] ", message, "\n"]}
      ]},

      {lager_file_backend, [
        {file, "/Users/xuchaoqian/codebase/bitbros/maxwell-server/log/error.log"},
        {size, 10485760},
        {date, "$D0"},
        {count, 40},
        {level, error},
        {formatter, lager_default_formatter},
        {formatter_config, ["[", severity, "] ", date, " ", time, " ", pid, " [", module, ":", line, "] ", message, "\n"]}
      ]}
    ]}
  ]},

  %% mnesia configure
  {mnesia, [
    {dir, "/Users/xuchaoqian/codebase/bitbros/maxwell-server/data"},
    {dc_dump_limit, 40},
    {dump_log_write_threshold, 512},
    {dump_log_time_threshold, 300000}
  ]},

  %% maxwell_server configure
  {maxwell_server, [
    {port, 1024},
    {handler_ext, maxwell_server_handler_ext}
  ]},

  %% basin configure
  {basin, [
    {root_dir, "/Users/xuchaoqian/codebase/bitbros/maxwell-server/data/basin/"},
    {lock_file, "/Users/xuchaoqian/codebase/bitbros/maxwell-server/data/basin/basin.lock"},
    {retention_age, 300},
    {clean_interval, 60}
  ]}
].